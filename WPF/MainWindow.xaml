<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="MathPad" Height="450" Width="800" Loaded="Window_Loaded">
    <DockPanel LastChildFill="True">
        <TextBox x:Name="txtLineNumbers" DockPanel.Dock="Left" HorizontalAlignment="Left" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Stretch" Width="20" IsReadOnly="True" FontFamily="Arial" Background="#FFEEEEEE" SelectionBrush="{x:Null}" />
        <TextBox x:Name="txtAnswers" DockPanel.Dock="Right" HorizontalAlignment="Left" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Stretch" Width="150" IsReadOnly="True" FontFamily="Arial" Background="#FFEEEEEE" SelectionBrush="{x:Null}" />
        <TextBox x:Name="txtQuestions" HorizontalAlignment="Stretch" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Stretch" FontFamily="Arial" TextChanged="txtQuestions_TextChanged" />
    </DockPanel>
</Window>
